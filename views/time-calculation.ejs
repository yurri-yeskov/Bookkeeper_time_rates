<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/head %> 
</head>
<body>
  <% include partials/menu %>
  <div class="container-fluid bg-3 text-center">    
    <h3><%= page %></h3><br>
    <div class="row">
      <div class="container-fluid">
        <div class="container-customer bg-3" style="margin-bottom: 50px; font-size: 17px;">
          <div class="col-sm-4">
            <label>Customer ID: &emsp;</label>
            <select class="selectpicker" title="Choose one of the Customer IDs" data-live-search="true">
              <option>My_customer_id1</option>
              <option>My_customer_id2</option>
              <option>My_customer_id3</option>
            </select>
          </div>
          <div class="col-sm-4">
            <label>Company Name: &emsp;</label>
            
            <label for="new-no" style="font-weight:normal">N/A</label>
          </div>
          <div class="col-sm-4">
            <label>Time Calculation for customer: &emsp;</label>
            <label for="new-no" style="font-weight:normal">N/A</label>
          </div>
        </div>
        <div>
          <select class="selectpicker pull-left" id="input-year" data-width="100px">
            <option selected>2021</option>
            <option>2020</option>
            <option>2019</option>
          </select>
        </div>
        <button id="add-button" style="margin-bottom: 10px;" class="btn btn-dark pull-right" data-toggle="modal" data-target="#basicModal"><b>Add New Product Profile</b></button>
        <table class="table table-striped table-bordered" id="product-table">
          <thead class="thead-dark">
            <tr>
              <th scope="col" style="width: 7%; text-align: center;">Product ID</th>
              <th scope="col" style="width: 10%; text-align: center;">Package</th>
              <th scope="col" style="width: 10%; text-align: center;">Company Type</th>
              <th scope="col" style="width: 25%; text-align: center;">Elements included</th>
              <th scope="col" style="width: 40%; text-align: center;">Note</th>
            </tr>
          </thead>
          <tbody>
            
            <tr>
              <td>P1</td>
              <td class="slc-cls package-td"><div class="plain-div package-plain">Plus, Plus CBIT, Udlejning</div>
                <div class="slc-cls-div package-div" style="display: none;">
                  <select class="selectpicker" data-live-search="true" multiple>
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                    <option>Plus</option>
                    <option>Plus CBIT</option>
                    <option>Udlejning</option>
                  </select>
                </div>
              </td>
              <td class="slc-cls company-td"><div class="plain-div company-plain">ApS, IVS, A/S, Forening</div>
                <div class="slc-cls-div company-div" style="display: none;">
                  <select class="selectpicker" data-live-search="true" multiple>
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                    <option>Plus</option>
                    <option>Plus CBIT</option>
                    <option>Udlejning</option>
                  </select>
                </div>
              </td>
              <td class="slc-cls ele-inc-td">
                <div class="plain-div ele-inc-plain">
                  Use A: Yes <br>
                  New_customer (A=True): <br>
                  B + L + E + F + G + I + J + K <br>
                  Existing_customer (A=False): <br>
                  B + M + E  + F + H + I + J + K
                </div>
                <div class="slc-cls-div ele-inc-div" style="display: none;">
                  <select class="selectpicker" data-live-search="true" multiple>
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                    <option>Plus</option>
                    <option>Plus CBIT</option>
                    <option>Udlejning</option>
                  </select>
                </div>
              </td>
              <td class="note-cls">Reporting time of VAT in SKAT and downloading vat_receipts to the customer</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Modal begin-->
    <div class="modal fade text-left" style="margin-top: 20px;" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Add New Product Profile</h4>
          </div>
          <div class="modal-body">
            <form>
              <div class="col-12 modal-margin"><b>Element ID: </b> P2</div><!--Auto Counter-->
              <div class="col-12 modal-margin">
                <label>Use Element A - New Customer: &emsp;</label>
                <input type="radio" id="new-no" name="check-customer" value="new-no" checked>
                <label for="new-no" style="font-weight:normal">No</label><label>&nbsp;&nbsp;</label>
                <input type="radio" id="new-yes" name="check-customer" value="new-yes">
                <label for="new-yes" style="font-weight:normal">Yes</label>
              </div>
              <div class="col-12 modal-margin">
                <label for="input-package" class="form-label">Package:</label>
                <select class="selectpicker form-control" data-live-search="true" id="input-package" multiple>
                  <option>Mustard</option>
                  <option>Ketchup</option>
                  <option>Relish</option>
                  <option>Plus</option>
                  <option>Plus CBIT</option>
                  <option>Udlejning</option>
                </select>
                <!-- <input type="text" class="form-control" id="input-package"> -->
              </div>
              <div class="col-12 modal-margin">
                <label for="input-company" class="form-label">Company Type:</label>
                <select class="selectpicker form-control" data-live-search="true" id="input-company" multiple>
                  <option>Mustard</option>
                  <option>Ketchup</option>
                  <option>Relish</option>
                </select>
                <!-- <input type="text" class="form-control" id="input-company"> -->
              </div>
              <div class="col-12 modal-margin hidden-div" style="display: none;">
                <label for="input-new-elements" class="form-label">Elements selected in Product Profile:</label><br>
                <label for="input-new-elements" class = "form-label" style="font-weight:normal;">New Customer</label>
                <select class="selectpicker form-control" data-live-search="true" id="input-new-elements" multiple>
                  <option>Mustard</option>
                  <option>Ketchup</option>
                  <option>Relish</option>
                </select>
                <!-- <input type="text" class="form-control" id="input-new-elements"> -->
              </div>
              <div class="col-12 modal-margin">
                <label for="input-exist-elements" class="form-label">Elements selected in Product Profile:</label><br>
                <label for="input-exist-elements" class = "form-label hidden-label" style="font-weight:normal; display: none;">Existing Customer</label>
                <select class="selectpicker form-control" data-live-search="true" id="input-exist-elements" multiple>
                  <option data-subtext="(B)">Mustard</option>
                  <option data-subtext="(F)">Ketchup</option>
                  <option data-subtext="(H)">Relish</option>
                </select>
                <!-- <input type="text" class="form-control" id="input-exist-elements"> -->
              </div>
              <div class="col-12 modal-margin">
                <label for="input-note" class="form-label">Note:</label>
                <textarea style="resize:none; height: 80px;" class="form-control" id="input-note"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary"> Save </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal end -->
  </div>
</body>
<% include partials/script %>
<script>
  var changeProductTable = new BSTable("product-table", {
    editableColumns:"1,2,3,4",
    //   $addButton: $('#table2-new-row-button'),
    onEdit:function() {
    // console.log("EDITED");
    },
    advanced: {
    columnLabel: ''
    }
  });
  changeProductTable.init();

  var rad = document.getElementsByName('check-customer');
  var prev = null;
  for (var i = 0; i < rad.length; i++) {
      rad[i].addEventListener('change', function() {
          (prev) ? prev.value : null;
          if (this !== prev) {
              prev = this;
          }
          var hidden_lab = document.getElementsByClassName("hidden-label");
          var hidden_div = document.getElementsByClassName("hidden-div");
          if (this.value == "new-yes") {
            for (var i = 0; i < hidden_lab.length; i++) {
              hidden_lab[i].style.display = "block";
            }
            for (var i = 0; i < hidden_div.length; i++) {
              hidden_div[i].style.display = "block";
            }
          } else if (this.value == "new-no") {
            for (var i = 0; i < hidden_lab.length; i++) {
              hidden_lab[i].style.display = "none";
            }
            for (var i = 0; i < hidden_div.length; i++) {
              hidden_div[i].style.display = "none";
            }
          }
      });
  }
</script>
</html>
