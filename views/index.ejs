<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
      <div class="container" style="margin-top:20px;">
        <table class="table table-striped table-bordered" id="bookkeeper-table">
          <thead class="thead-dark">
            <tr style="background-color: #b4d2b4;">
              <th scope="col" style="width: 20%; text-align: center;">Bookkeeper</th>
              <th scope="col" style="width: 20%; text-align: center;">Hourly Rates</th>
              <th scope="col" style="width: 50%; text-align: center;">Note</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<data.length; i++) {%>
              <tr>
                <td><%= data[i].worker_initials %></td>
                <td class="num-cls"><%= data[i].price_per_hour %></td>
                <td class="note-cls"><%= data[i].notes %></td>
                <input class="hidden_id" type="hidden" value="<%= data[i].id %>">
              </tr>
            <% } %>
            
          </tbody>
        </table>
      </div>
      <input type="hidden" id="new_hourly" name="new_hourly" value="">
      <input type="hidden" id="new_note" name="new_note" value="">
      <input type="hidden" id="table_id" name="table_id" value="">
  </div>
</div>
</body>
<% include partials/script %>
<script>
var changeBookkeeperTable = new BSTable("bookkeeper-table", {
  editableColumns:"1,2",
  onEdit:function() {
    // console.log("EDITED");
  },
  advanced: {
    columnLabel: ''
  }
});
changeBookkeeperTable.init();
</script>
</html>
